<resources>
    
    <style name="AlertTextStyle">
        <item name="android:textColor">@color/WHITE</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="AppSplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_window</item>
    </style>
    
    <style name="Xdag">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="Xdag.Item">
        <item name="android:layout_width">match_parent</item>
    </style>
    
    <style name="Xdag.Item.Explain">
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textColor">#757575</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="Xdag.Item.Explain.Text">
        <item name="android:textColor">#de000000</item>
        <item name="android:background">@color/WHITE</item>
        <item name="android:elevation">1dp</item>
    </style>
    
    <style name="Xdag.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">32dp</item>
        <item name="android:layout_marginRight">32dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/WHITE</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
